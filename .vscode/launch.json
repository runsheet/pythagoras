{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tools Manager",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/test-tools-manager.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "GITHUB_TOKEN": "${env:GITHUB_TOKEN}",
        "FILESYSTEM_ROOT": "${workspaceFolder}/example"
      },
      "args": ["${workspaceFolder}/example"],
      "sourceMaps": true,
      "smartStep": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Plan Execute Agent",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/test-plan-execute-agent.js",
      "args": ["${workspaceFolder}/example", "Test objective: Analyze the codebase structure"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "OPENAI_API_KEY": "${env:OPENAI_API_KEY}",
        "GITHUB_TOKEN": "${env:GITHUB_TOKEN}",
        "FILESYSTEM_ROOT": "${workspaceFolder}/example"
      },
      "sourceMaps": true,
      "smartStep": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Main Workflow (run)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/dist/index.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "OPENAI_API_KEY": "${env:OPENAI_API_KEY}",
        "GITHUB_TOKEN": "${env:GITHUB_TOKEN}",
        "INPUT_OBJECTIVE": "Test objective for debugging",
        "INPUT_WORKING-DIRECTORY": "${workspaceFolder}/example",
        "GITHUB_REPOSITORY": "runsheet/pythagoras",
        "GITHUB_RUN_ID": "12345"
      },
      "sourceMaps": true,
      "smartStep": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "npm: package"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tools Manager (TypeScript)",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["--loader", "ts-node/esm"],
      "args": ["${workspaceFolder}/scripts/test-tools-manager.js"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "smartStep": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Agent (TypeScript)",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["--loader", "ts-node/esm"],
      "args": [
        "${workspaceFolder}/scripts/test-plan-execute-agent.js",
        "Test objective: Analyze the codebase structure"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "OPENAI_API_KEY": "${env:OPENAI_API_KEY}"
      },
      "sourceMaps": true,
      "smartStep": true
    }
  ],
  "compounds": [
    {
      "name": "Debug Tools + Agent",
      "configurations": ["Debug Tools Manager", "Debug Plan Execute Agent"],
      "stopAll": true
    }
  ]
}
