{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@runsheet/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": false,
    "skipLibCheck": true
  },
  "exclude": ["__fixtures__", "__tests__", "coverage", "dist", "node_modules"],
  "include": ["src"]
}
